{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "noEmitOnError": false,
    "noEmit": true,
    "sourceMap": true,
    "baseUrl": ".",
    "module": "es6",
    "paths": {
      "dummy/tests/*": ["tests/*"],
      "dummy/*": ["tests/dummy/app/*"],
      "why-yes-i-do-have-types": ["addon"],
      "why-yes-i-do-have-types/*": ["addon/*"]
    }
  },
  "include": [
    "addon",
    "tests"
  ]
}
